{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../site",
    "distDir": "../site",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Stacks",
    "version": "0.3.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "clipboard": {
        "writeText": true
      },
      "window": {
        "hide": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "externalBin": ["bin/x-macos-pasteboard"],
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "stream.cross.stacks",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "alwaysOnTop": true,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "title": "stacks",
        "width": 970,
        "height": 470
      }
    ]
  }
}
