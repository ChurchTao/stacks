{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "stacks",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
          "hide": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "externalBin": [
        "bin/x-macos-pasteboard"
      ],
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "stream.cross.stacks",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "alwaysOnTop": true,
        "visible": false,
        "decorations": false,
        "title": "stacks",
        "width": 950,
        "height": 450
      }
    ]
  }
}
